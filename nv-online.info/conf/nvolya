<VirtualHost *:81>
    DocumentRoot /var/www/nvolya/old
    ServerName oldold.nv-online.info
    TransferLog /dev/null
    DirectoryIndex index.php index.html
    ExpiresActive On 
    ExpiresDefault "access plus 300 days"
    <Directory /var/www/nvolya/old>
	Options -Indexes FollowSymLinks MultiViews
	AllowOverride All
	<IfModule mod_access.c>
	    Order allow,deny
	    Allow from all
	</IfModule>
    </Directory>	

    Redirect /phpmyadmin__ https://www.nv-online.info/phpmyadmin__
    											    
</VirtualHost>

<VirtualHost *:81>
    DocumentRoot /var/www/nvolya/newscoop
    TransferLog /dev/null
    ServerName nv-online.info
    ServerAlias *.nv-online.info nvolya.omniton.net
    
    FileETag None
    Header unset X-Powered-By
    Header unset ETag
    Header unset Pragma
                        
    DirectoryIndex index2.php index.html
    ExpiresActive On 
    ExpiresByType text/html "access plus 5 minutes"
    ExpiresByType text/xml "access plus 5 minutes"
    ExpiresByType application/xml "access plus 5 minutes"
    ExpiresByType application/rss+xml "access plus 5 minutes"
    ExpiresDefault "access plus 30 days"
    <Directory /var/www/nvolya/newscoop>
	Options -Indexes FollowSymLinks MultiViews
	AllowOverride All
	<IfModule mod_access.c>
	    Order allow,deny
	    Allow from all
	</IfModule>
    </Directory>	

    Redirect /admin https://www.nv-online.info/admin    
    Redirect /phpmyadmin__ https://www.nv-online.info/phpmyadmin__
</VirtualHost>


<VirtualHost *:443>

#ErrorLog logs/ssl_error_log
#TransferLog logs/ssl_access_log
LogLevel warn

    SSLEngine on
    SSLProtocol all -SSLv2
    SSLCipherSuite ALL:!ADH:!EXPORT:!SSLv2:RC4+RSA:+HIGH:+MEDIUM:+LOW
    SSLCertificateFile /var/www/nvolya/ssl/cert.pem
    SSLCertificateKeyFile /var/www/nvolya/ssl/key.pem
    SSLCACertificateFile /var/www/nvolya/ssl/cacert.pem
    SSLCARevocationFile /var/www/nvolya/ssl/ca.crl
    SSLVerifyDepth 2
    SSLOptions +FakeBasicAuth +ExportCertData
    SSLVerifyClient require

#CustomLog logs/ssl_request_log "%t %h %{SSL_PROTOCOL}x %{SSL_CIPHER}x \"%r\" %b"

    DocumentRoot /var/www/nvolya/newscoop
    ServerName nv-online.info
    ServerAlias *.nv-online.info nvolya.omniton.net
    DirectoryIndex index.php index.html
    <Directory /var/www/nvolya/newscoop>
	Options -Indexes FollowSymLinks MultiViews
	AllowOverride All
        SSLRequire %{SSL_CLIENT_S_DN_OU} eq "Admin" or %{SSL_CLIENT_S_DN_OU} eq "nvolya"
	<IfModule mod_access.c>
	    Order allow,deny
	    Allow from all
	</IfModule>
    </Directory>	
</VirtualHost>                                  

